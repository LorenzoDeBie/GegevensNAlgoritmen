{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++.exe build",
            "command": "g++",
            "args": ["-g", "src\\*.cpp", "-o", "bin\\main.exe", "-std=c++17"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
              "kind": "build",
              "isDefault": true
            },
            "dependsOn": "Create bin folder"
        },
        {
            "type": "shell",
            "label": "g++.exe build & run",
            "command": "${cwd}\\bin\\main.exe",
            "group": {
              "kind": "test",
              "isDefault": true
            },
            "dependsOn": "g++.exe build"
        },
        {
            "type": "shell",
            "label": "Create bin folder",
            "command": "mkdir -Force bin",
            "group": "none"
        },
        {
            "type": "shell",
            "label": "clean",
            "command": "rm -Recurse bin"
        }
    ]
}