{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++ project",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": ".\\build.bat"
        },
        {
            "label": "Build & run C++ project",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "command": ".\\build.bat; .\\bin\\main.exe"
        },
        {
            "type": "shell",
            "label": "g++.exe build",
            "command": "C:\\mingw64\\bin\\g++.exe",
            "args": ["-g", "${workspaceFolder}\\src\\*.cpp", "-o", "${cwd}\\bin\\main.exe", "-std=c++17"],
            "options": {
              "cwd": "C:\\mingw64\\bin"
            },
            "problemMatcher": ["$gcc"],
            "group": {
              "kind": "build",
              "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "g++.exe build & run",
            "command": "${cwd}\\bin\\main.exe",
            "group": {
              "kind": "test",
              "isDefault": true
            },
            "dependsOn": "g++.exe build"
        }
    ]
}